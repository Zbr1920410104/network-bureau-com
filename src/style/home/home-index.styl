fontColor = #eee;

.home-index-box {
  display: flex;
  justify-content: space-between;

  .context {
    position: relative;
    height: 580px;
    width: 30%;
    overflow: hidden;
    box-shadow: 0 0 5px #000;

    .image-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .outter-box {
      position: absolute;
      top: 0;
      left: 0;
      background: rgba(0, 0, 0, 0.7);
      width: 100%;
      height: 100%;
      color: fontColor;
      display: flex;
      align-items: center; /* 实现垂直居中 */
      padding: 0 30px;

      .icon {
        font-size: 80px;
      }

      .inner-box {
        padding-left: 20px;

        .caption {
          font-size: 20px;
          margin-bottom: 10px;
          color: fontColor;
        }

        .sucurrent-profile-inner-left-box {
          font-size: 14px;
          margin-bottom: 10px;
          text-indent: 28px;
        }
      }
    }
  }
}