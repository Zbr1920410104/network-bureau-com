.verify-item-detail-box {
  padding-top: 20px;
  border-bottom: 1px solid #ddd;

  .detail-title-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    .title-left-box {
      .icon {
        color: rgb(51, 68, 84);
        font-size: 20px;
        margin-right: 16px;
      }

      span {
        color: rgb(51, 68, 84);
        font-size: 16px;
      }
    }
  }

  .verify-description-title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;

    .description-title-text {
      span {
        font-size: 14px;
        font-weight: 600;
        padding-right: 20px;
      }
    }

    .description-title-button {
      .link-button {
        font-size: 14px;
      }
    }
  }

  .verify-description-box {
    padding: 20px;
  }
}

.button-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20px;

  .success-button {
    background: #52c41a;
    border: 1px solid #52c41a;
  }

  .fail-button {
    background: #f5222d;
    border: 1px solid #f5222d;
  }
}