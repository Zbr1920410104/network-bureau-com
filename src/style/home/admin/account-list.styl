.account-list-box {
  padding: 10px;
  box-shadow: 0 0 5px #ddd;
  margin-bottom: 10px;

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: rgb(51, 68, 84);
    border-bottom: 1px solid #ddd;
    color: #fff;
  }

  .account-list-content-box {
    .list-title-box {
      padding-bottom: 10px;
      display: flex;
      flex-direction: row;
      width: 100%;

      .select {
        width: 120px;
        margin-right: 20px;
      }

      .search {
        width: 180px;
        margin-right: 20px;
      }

      .primary-button {
        margin-right: 20px;
      }

      .export-button {
        background: #52c41a;
        border: 1px solid #52c41a;
        margin-left: 20px;
      }
    }
  }
}
