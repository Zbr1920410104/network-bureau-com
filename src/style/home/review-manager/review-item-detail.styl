.review-item-detail-box {
  padding-top: 20px;
  border-bottom: 1px solid #ddd;

  .detail-title-box {
    display: flex;
    flex-direction: row;

    .icon {
      color: rgb(51, 68, 84);
      font-size: 20px;
      margin-right: 16px;
    }

    span {
      color: rgb(51, 68, 84);
      font-size: 16px;
    }

    .download-button-box {
      .download-button {
        width: 300px;
      }
    }
  }

  .review-description-title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;

    .description-title-text {
      span {
        font-size: 14px;
        font-weight: 600;
        padding-right: 20px;
      }
    }

    .description-title-button {
      .link-button {
        font-size: 14px;
      }
    }
  }
}

.review-description-box {
  padding: 20px;
}