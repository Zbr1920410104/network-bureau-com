.review-detail-box {
  padding: 10px;
  box-shadow: 0 0 5px #ddd;
  margin-bottom: 10px;

  .title-box {
    font-size: 16px;
    padding-top: 10px;
    padding-bottom: 10px;
    text-align: center;
    background: rgb(51, 68, 84);
    border-bottom: 1px solid #ddd;
    color: #fff;
  }

  .subtitle-box {
    display: flex;
    align-items: center;
    flex-direction: row;
    padding-bottom: 10px;

    .exit-icon {
      font-size: 24px;
      color: rgb(51, 68, 84);
    }

    .subtitle-title {
      font-size: 16px;
      font-weight: 900;
      color: rgb(51, 68, 84);
      margin-bottom: 0;
    }
  }

  .detail-content-box {
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;

    .list-title-box {
      display: flex;
      justify-content: flex-start;
      flex-direction: row;
      width: 100%;

      .opinion-button {
        width: 120px;
      }

      .success-button {
        background: #f5222d;
        border: 1px solid #f5222d;
        margin-left: 20px;
      }

      .export-button {
        background: #52c41a;
        border: 1px solid #52c41a;
        width: 180px;
        margin-left: 20px;
      }
    }

    .review-form-box {
      border-bottom: 1px solid #ddd;
      padding: 10px;
      width: 100%;
    }
  }
}

.text-box {
  .important-text {
    color: #f5222d;
  }
}

.review-modal-box {
  display: flex;
  align-items: center;
  flex-direction: column;

  .save-button {
    width: 300px;
  }
}